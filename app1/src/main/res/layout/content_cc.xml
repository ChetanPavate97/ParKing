<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_cc"
    style="@style/parent.contentLayout"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/welcomeText"
                style="@style/viewParent.headerText"
                android:layout_gravity="center"
                android:text="Welcome to ParKing" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/newBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:background="@drawable/home_gradient_maths"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/ui"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:id="@+id/textViewSub1Title"
                            android:text="New\nBooking"
                            android:layout_marginEnd="10dp"
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/viewBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <net.colindodd.gradientlayout.GradientRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        gl:end_color="@color/gradientLightYellow2"
                        gl:start_color="@color/gradientLightOrange2"
                        gl:orientation="LEFT_RIGHT"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/transportation"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:id="@+id/textViewSub3Title"
                            android:text="View\nBooking"
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </net.colindodd.gradientlayout.GradientRelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <net.colindodd.gradientlayout.GradientRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        gl:start_color="@color/gradientViolet"
                        gl:end_color="@color/gradientLightBlue"
                        gl:orientation="LEFT_RIGHT"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/feedback"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:id="@+id/textViewSub5Title"
                            android:text="Update\nDetails"
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </net.colindodd.gradientlayout.GradientRelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <net.colindodd.gradientlayout.GradientRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        gl:start_color="@color/gradientLightYellow"
                        gl:end_color="@color/gradientOrange"
                        gl:orientation="LEFT_RIGHT"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/details"
                            style="@style/homeCardImage"/>
                        <TextView
                            android:id="@+id/textViewSub2Title"
                            android:text="My \nDetails"
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </net.colindodd.gradientlayout.GradientRelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cencelBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <net.colindodd.gradientlayout.GradientRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        gl:start_color="@color/gradientLightOrange2"
                        gl:end_color="@color/gradientOrange3"
                        gl:orientation="LEFT_RIGHT"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/cancel"
                            style="@style/homeCardImage" />
                        <TextView
                            android:id="@+id/textViewSub4Title"
                            android:text="Cancel/Leave \nSlot "
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </net.colindodd.gradientlayout.GradientRelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="10dp">
                    <net.colindodd.gradientlayout.GradientRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        gl:start_color="@color/gradientLightGreen"
                        gl:end_color="@color/gradientLightBlue"
                        gl:orientation="LEFT_RIGHT"
                        android:padding="10dp">
                        <ImageView
                            android:maxHeight="90dp"
                            android:src="@drawable/logout"
                            style="@style/homeCardImage" />
                        <TextView
                            android:id="@+id/textViewSub6Title"
                            android:text="Logout"
                            android:textAllCaps="false"
                            style="@style/viewParent.headerText.HomeCardTitle" />
                    </net.colindodd.gradientlayout.GradientRelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>